@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewData["Title"] = "WriterProfileList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body>


    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table  class="table table-striped">
                                <thead>
                                    <tr>

                                        <th>Yazar Id</th>
                                        <th>Yazar Adı </th>
                                        <th>Yazar Görseli </th>
                                        <th>Yazar Maili</th>
                                        <th>Yazar Hakkında</th>
                                        <th>Yazar Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.WriterId</td>
                                        <td>@item.WriterName</td>
                                        <td><img src="@item.WriterImage" class="rounded-circle" height="30" width="30" /></td>
                                        <td>@item.WriterMail</td>
                                        <td>
                                            @item.WriterAbout
                                        </td>
                                        @if (item.WriterStatus == true)
                                        {
                                            <td><a href="#"><i class="fa fa-check text-navy"></i></a></td>
                                        }
                                        else if (item.WriterStatus == false)
                                        {
                                           
                                            <td><a href="#"> <font color="red"><i class="fa fa-close "></i></font></a></td>
                                        }
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    @section scripts{ }

</body>

</html>


