@using CoreDemo.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeId</td>
            <td>@item.EmployeeName</td>
            <td><a href="/EmployeeTest/DeleteEmployee/@item.EmployeeId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/EmployeeTest/UpdateEmployee/@item.EmployeeId" class="btn btn-outline-success">Düzenle</a></td>

        </tr>
    }
</table>
<a href="/EmployeeTest/AddEmployee/" class="btn btn-outline-primary">Yeni Çalışan Ekle</a>
