@using EntityLayer.Concrete
@model List<Category>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategori Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            @ViewBag.categoryCount
                            <tr>
                                <th> # </th>
                                <th> Kategori Adı </th>

                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.CategoryId </td>
                                    <td> @item.CategoryName </td>

                                    <td>
                                        @if (item.CategoryId == 1)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 80%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }

                                        @if (item.CategoryId == 4)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 50%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 2)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 70%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }@if (item.CategoryId == 3)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 20%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }@if (item.CategoryId == 5)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 88%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }@if (item.CategoryId == 6)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 12%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }@if (item.CategoryId == 7)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 5%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 8)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 31%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 9)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 52%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 10)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 45%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 11)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 7%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 12)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 74%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        } @if (item.CategoryId == 13)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 21%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 14)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 58%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 15)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 1%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        @if (item.CategoryId == 16)
                                        {


                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 77%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
