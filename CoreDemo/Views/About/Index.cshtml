@using EntityLayer.Concrete
@model List<About> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginUserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Hakkımızda</h3>
            <div class="row inner-sec">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">

                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="~/CoreBlogTema/web/images/b5.jpg" class="img-fluid" alt="">
                            </a>
                        </div>
                        <h3>
                            Biz Kimiz & Misyonumuz & Vizyonumuz
                            <p></p>
                        </h3>
                        <h6 style="font-language-override">
                            Blog Tarihçesi
                            <p></p>

                        </h6>
                        @foreach (var item in Model)
                        {

                            <p>
                                @item.AboutDetails1
                            </p>
                            <h6 style="font-language-override">
                                Blog Nedir?
                                <p></p>
                            </h6>
                            <p>
                                @item.AboutDetails2
                            </p>
                            
                        }
                    </div>
                </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/CoreBlogTema/web/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubcribeMail.cshtml")
                        @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")

                    <div class="tech-btm">
                        @await Component.InvokeAsync("BlogLastBlog")
                        @await Component.InvokeAsync("WriterLastBlog")
                    </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
</body>
</html>
